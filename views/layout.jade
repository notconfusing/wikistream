html
  head
    title= title
    meta( name='viewport', content='width=device-width, minimum-scale=1.0, maximum-scale=1.0')
    link(rel='stylesheet', href='http://wikistream.wmflabs.org/stylesheets/style.css')
    link(rel='stylesheet', href='http://wikistream.wmflabs.org/stylesheets/smoothness/jquery-ui-1.8.13.custom.css')

    - if (stream)
        script(src='http://wikistream.wmflabs.org/js/jquery.min.js')
        script(src='http://tools-static.wmflabs.org/cocytus/js/socket.io.js')
        script(src='http://wikistream.wmflabs.org/js/jquery.hotkeys.js')
        script(src='http://wikistream.wmflabs.org/js/jquery-ui.js')
        script(src='http://wikistream.wmflabs.org/js/jquery.backstretch.js')
        script(src='http://wikistream.wmflabs.org/js/jquery.ba-bbq.min.js')
        script(src='http://tools-static.wmflabs.org/cocytus/js/app.js')

  body
    header(class='screen')
      img(src="http://wikistream.wmflabs.org/images/wikipedia.png")
      br
      span(class='wikistream') 
        a(href="/") wikistream
      br
      span(class='pauseInfo') Press "p" to pause

    header(class='mobile')
      strong 
        a(href="/") wikistream

    a(id="github", href="http://github.com/edsu/wikistream")
      img(style="position: absolute; top: 0; right: 0; border: 0; z-index: 3;", src="http://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png", alt="Fork me on GitHub")
    br
    div(id="content")!= body
